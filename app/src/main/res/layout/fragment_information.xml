<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationFragment">

    <TextView
        android:id="@+id/record_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/record_type"
        android:textColor="@color/light_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <Spinner
        android:id="@+id/type_spinner"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        android:ems="19"
        android:fontFamily="sans-serif"
        android:textColor="@color/light_grey"
        android:textColorHint="@color/dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/record_name_entry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/record_name_entry"
        app:layout_constraintTop_toBottomOf="@+id/record_type_name"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/record_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/record_title"
        android:textColor="@color/light_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/record_type_name"
        app:layout_constraintTop_toBottomOf="@+id/type_spinner"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/record_name_entry"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:autofillHints="name of record"
        android:background="@drawable/entry_background"
        android:ems="19"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_name_of_record"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/record_name_text"
        app:layout_constraintTop_toBottomOf="@+id/record_name_text"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/app_spinner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app"
        android:textColor="@color/light_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/record_name_text"
        app:layout_constraintTop_toBottomOf="@+id/record_name_entry"
        app:layout_constraintVertical_bias="0.02" />

    <Spinner
        android:id="@+id/app_spinner"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        android:ems="19"
        android:fontFamily="sans-serif"
        android:textColor="@color/light_grey"
        android:textColorHint="@color/dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/record_name_entry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/app_spinner_title"
        app:layout_constraintTop_toBottomOf="@+id/app_spinner_title"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/email_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/light_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/record_name_text"
        app:layout_constraintTop_toBottomOf="@+id/app_spinner"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/record_email_entry"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/entry_background"
        android:ems="19"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_email_of_record"
        android:padding="10dp"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_entry"
        app:layout_constraintTop_toBottomOf="@+id/email_entry"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/light_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_entry"
        app:layout_constraintTop_toBottomOf="@+id/record_email_entry"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/record_password_entry"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/entry_background"
        android:ems="19"
        android:hint="@string/enter_password_of_record"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_title"
        app:layout_constraintTop_toBottomOf="@+id/password_title"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/button_create_record"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:background="@drawable/create_btn_background"
        android:fontFamily="sans-serif-black"
        android:text="@string/crate_btn"
        android:textAllCaps="false"
        android:textColor="@color/full_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_password_entry"
        app:layout_constraintVertical_bias="0.849" />


</androidx.constraintlayout.widget.ConstraintLayout>